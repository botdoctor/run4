---
import { Play, Mail, Phone, MapPin } from 'lucide-react';
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-1 md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-black rounded-lg flex items-center justify-center">
            <Play class="w-4 h-4 text-white" />
          </div>
          <span class="font-display font-bold text-xl">Run4PRs</span>
        </div>
        <p class="text-gray-300 mb-6 max-w-md">
          Professional running coaching and training programs designed to help you achieve your personal records and reach your full potential.
        </p>
        <div class="space-y-2">
          <div class="flex items-center space-x-2 text-gray-300">
            <Mail class="w-4 h-4" />
            <span>info@run4prs.com</span>
          </div>
          <div class="flex items-center space-x-2 text-gray-300">
            <Phone class="w-4 h-4" />
            <span>(555) 123-4567</span>
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/about" class="text-gray-300 hover:text-white transition-colors">About</a></li>
          <li><a href="/training-1" class="text-gray-300 hover:text-white transition-colors">Training Programs</a></li>
          <li><a href="/nutrition-coaching" class="text-gray-300 hover:text-white transition-colors">Nutrition Coaching</a></li>
          <li><a href="/testimonials" class="text-gray-300 hover:text-white transition-colors">Testimonials</a></li>
        </ul>
      </div>

      <!-- Programs -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Programs</h3>
        <ul class="space-y-2">
          <li><a href="/half-marathon-program" class="text-gray-300 hover:text-white transition-colors">Half Marathon</a></li>
          <li><a href="/unleash-speed" class="text-gray-300 hover:text-white transition-colors">Speed Training</a></li>
          <li><a href="/strength-training" class="text-gray-300 hover:text-white transition-colors">Strength Training</a></li>
          <li><a href="/triathlonplan" class="text-gray-300 hover:text-white transition-colors">Triathlon Plan</a></li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; 2024 Run4PRs. All rights reserved.</p>
    </div>
  </div>
</footer>