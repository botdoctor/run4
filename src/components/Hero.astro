---
import { ArrowRight, Play, Trophy, Users, Target } from 'lucide-react';
---

<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-50 via-white to-accent-50 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="animate-slide-up">
        <div class="flex items-center space-x-2 mb-6">
          <div class="w-12 h-12 bg-gradient-to-br from-accent-500 to-black rounded-xl flex items-center justify-center animate-bounce-subtle">
            <Play class="w-6 h-6 text-white" />
          </div>
          <span class="text-black font-bold text-lg">Run4PRs</span>
        </div>
        
        <h1 class="font-display font-bold text-4xl sm:text-5xl lg:text-6xl text-black mb-6 leading-tight">
          Unlock Your
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent-600 to-primary-400">
            Running Potential
          </span>
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          Professional coaching and personalized training programs designed to help you achieve your personal records and reach your full potential as a runner.
        </p>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 mb-8">
          <div class="text-center">
            <div class="flex items-center justify-center w-12 h-12 bg-accent-100 rounded-lg mb-2 mx-auto">
              <Trophy class="w-6 h-6 text-accent-600" />
            </div>
            <div class="font-bold text-2xl text-gray-900">500+</div>
            <div class="text-sm text-gray-600">PRs Achieved</div>
          </div>
          <div class="text-center">
            <div class="flex items-center justify-center w-12 h-12 bg-primary-100 rounded-lg mb-2 mx-auto">
              <Users class="w-6 h-6 text-primary-600" />
            </div>
            <div class="font-bold text-2xl text-gray-900">1000+</div>
            <div class="text-sm text-gray-600">Athletes Coached</div>
          </div>
          <div class="text-center">
            <div class="flex items-center justify-center w-12 h-12 bg-accent-100 rounded-lg mb-2 mx-auto">
              <Target class="w-6 h-6 text-accent-600" />
            </div>
            <div class="font-bold text-2xl text-gray-900">95%</div>
            <div class="text-sm text-gray-600">Success Rate</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/cart" class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-primary-400 to-primary-500 text-black font-bold rounded-xl hover:from-primary-500 hover:to-primary-600 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
            Get Started Today
            <ArrowRight class="ml-2 w-5 h-5" />
          </a>
          <a href="/about" class="inline-flex items-center justify-center px-8 py-4 bg-white text-black font-semibold rounded-xl border-2 border-primary-300 hover:border-primary-400 hover:bg-primary-50 transition-all duration-200">
            Learn More
          </a>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="relative animate-fade-in">
        <div class="relative">
          <img 
            src="https://images.pexels.com/photos/2402777/pexels-photo-2402777.jpeg?auto=compress&cs=tinysrgb&w=800" 
            alt="Professional runner in action" 
            class="rounded-2xl shadow-2xl w-full h-[600px] object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-2xl"></div>
        </div>
        
        <!-- Floating Cards -->
        <div class="absolute -top-6 -left-6 bg-white rounded-xl shadow-lg p-4 animate-bounce-subtle">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
              <Trophy class="w-5 h-5 text-green-600" />
            </div>
            <div>
              <div class="font-semibold text-gray-900">New PR!</div>
              <div class="text-sm text-gray-600">5K in 18:32</div>
            </div>
          </div>
        </div>
        
        <div class="absolute -bottom-6 -right-6 bg-white rounded-xl shadow-lg p-4 animate-bounce-subtle" style="animation-delay: 1s;">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
              <Target class="w-5 h-5 text-blue-600" />
            </div>
            <div>
              <div class="font-semibold text-gray-900">Goal Achieved</div>
              <div class="text-sm text-gray-600">Marathon Sub-3</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>