---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Users, Award, Target, Heart, CheckCircle } from 'lucide-react';
---

<Layout title="About Us - Run4PRs" description="Learn about Run4PRs' mission, coaching philosophy, and the team dedicated to helping you achieve your running goals.">
  <Header />
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-primary-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h1 class="font-display font-bold text-4xl sm:text-5xl text-gray-900 mb-6">
              About <span class="text-primary-600">Run4PRs</span>
            </h1>
            <p class="text-xl text-gray-600 mb-8 leading-relaxed">
              We're passionate about helping runners of all levels achieve their personal records and discover their true potential. Our evidence-based approach combines personalized coaching with proven training methodologies.
            </p>
            <div class="grid grid-cols-2 gap-6">
              <div class="text-center">
                <div class="text-3xl font-bold text-primary-600">5+</div>
                <div class="text-sm text-gray-600">Years Experience</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-primary-600">1000+</div>
                <div class="text-sm text-gray-600">Athletes Coached</div>
              </div>
            </div>
          </div>
          <div>
            <img 
              src="https://images.pexels.com/photos/2402777/pexels-photo-2402777.jpeg?auto=compress&cs=tinysrgb&w=800" 
              alt="Professional running coach" 
              class="rounded-2xl shadow-lg w-full h-[500px] object-cover"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Mission Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="font-display font-bold text-3xl sm:text-4xl text-gray-900 mb-6">Our Mission</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            To empower every runner to achieve their personal best through personalized coaching, scientific training methods, and unwavering support.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <Target class="w-8 h-8 text-primary-600" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">Goal-Oriented</h3>
            <p class="text-gray-600">Every training plan is designed with your specific goals in mind.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <Award class="w-8 h-8 text-accent-600" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">Evidence-Based</h3>
            <p class="text-gray-600">Our methods are backed by sports science and proven results.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <Users class="w-8 h-8 text-green-600" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">Community</h3>
            <p class="text-gray-600">Join a supportive community of like-minded runners.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-red-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <Heart class="w-8 h-8 text-red-600" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">Passionate</h3>
            <p class="text-gray-600">We're runners too, and we love what we do.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display font-bold text-3xl sm:text-4xl text-gray-900 mb-4">Get in Touch</h2>
          <p class="text-xl text-gray-600">
            Have questions about our programs? We'd love to hear from you.
          </p>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-8">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                <input type="text" id="firstName" name="firstName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                <input type="text" id="lastName" name="lastName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" />
              </div>
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
              <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" />
            </div>
            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
              <select id="subject" name="subject" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors">
                <option value="">Select a subject</option>
                <option value="general">General Inquiry</option>
                <option value="coaching">Coaching Questions</option>
                <option value="programs">Training Programs</option>
                <option value="support">Technical Support</option>
              </select>
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
              <textarea id="message" name="message" rows="5" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-none"></textarea>
            </div>
            <div class="text-center">
              <button type="submit" class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors">
                Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>