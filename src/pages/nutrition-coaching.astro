---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Apple, Zap, Heart, Scale, CheckCircle, ArrowRight } from 'lucide-react';
---

<Layout title="Nutrition Coaching - Run4PRs" description="Optimize your running performance with personalized nutrition coaching. Learn proper fueling strategies for training and racing.">
  <Header />
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-green-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h1 class="font-display font-bold text-4xl sm:text-5xl text-gray-900 mb-6">
              Nutrition <span class="text-green-600">Coaching</span>
            </h1>
            <p class="text-xl text-gray-600 mb-8 leading-relaxed">
              Fuel your performance with personalized nutrition coaching designed specifically for runners. Learn how to optimize your diet for training, racing, and recovery.
            </p>
            <div class="grid grid-cols-2 gap-6">
              <div class="text-center">
                <div class="text-3xl font-bold text-green-600">95%</div>
                <div class="text-sm text-gray-600">Performance Improvement</div>
              </div>
              <div class="text-center">
                <div class="text-3xl font-bold text-green-600">500+</div>
                <div class="text-sm text-gray-600">Athletes Coached</div>
              </div>
            </div>
          </div>
          <div>
            <img 
              src="https://images.pexels.com/photos/1640777/pexels-photo-1640777.jpeg?auto=compress&cs=tinysrgb&w=800" 
              alt="Healthy nutrition for runners" 
              class="rounded-2xl shadow-lg w-full h-[500px] object-cover"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="font-display font-bold text-3xl sm:text-4xl text-gray-900 mb-6">Why Nutrition Matters for Runners</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Proper nutrition is the foundation of peak running performance. Our coaching helps you optimize every aspect of your fueling strategy.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <Zap class="w-8 h-8 text-green-600" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">Enhanced Energy</h3>
            <p class="text-gray-600">Optimize your energy levels for training and racing with proper fueling strategies.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <Heart class="w-8 h-8 text-blue-600" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">Faster Recovery</h3>
            <p class="text-gray-600">Speed up recovery between workouts with targeted nutrition protocols.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <Scale class="w-8 h-8 text-purple-600" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">Optimal Weight</h3>
            <p class="text-gray-600">Achieve and maintain your ideal racing weight without compromising performance.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-red-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <Apple class="w-8 h-8 text-red-600" />
            </div>
            <h3 class="font-semibold text-lg text-gray-900 mb-2">Better Health</h3>
            <p class="text-gray-600">Improve overall health and reduce injury risk through proper nutrition.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="font-display font-bold text-3xl sm:text-4xl text-gray-900 mb-6">Our Nutrition Services</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Comprehensive nutrition coaching tailored to your running goals and lifestyle.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Basic Plan -->
          <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-xl transition-all duration-300">
            <div class="text-center mb-6">
              <h3 class="font-display font-semibold text-2xl text-gray-900 mb-2">Basic Plan</h3>
              <div class="text-4xl font-bold text-green-600 mb-2">$79</div>
              <div class="text-gray-600">per month</div>
            </div>
            <ul class="space-y-3 mb-8">
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Personalized meal plans</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Pre/post workout nutrition</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Monthly check-ins</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Email support</span>
              </li>
            </ul>
            <button class="w-full bg-green-600 text-white font-semibold py-3 rounded-lg hover:bg-green-700 transition-colors">
              Get Started
            </button>
          </div>

          <!-- Premium Plan -->
          <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-xl transition-all duration-300 border-2 border-green-500 relative">
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <span class="bg-green-500 text-white px-4 py-1 rounded-full text-sm font-semibold">Most Popular</span>
            </div>
            <div class="text-center mb-6">
              <h3 class="font-display font-semibold text-2xl text-gray-900 mb-2">Premium Plan</h3>
              <div class="text-4xl font-bold text-green-600 mb-2">$149</div>
              <div class="text-gray-600">per month</div>
            </div>
            <ul class="space-y-3 mb-8">
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Everything in Basic</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Race day nutrition strategy</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Supplement recommendations</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Bi-weekly video calls</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">24/7 chat support</span>
              </li>
            </ul>
            <button class="w-full bg-green-600 text-white font-semibold py-3 rounded-lg hover:bg-green-700 transition-colors">
              Get Started
            </button>
          </div>

          <!-- Elite Plan -->
          <div class="bg-white rounded-2xl shadow-lg p-8 hover:shadow-xl transition-all duration-300">
            <div class="text-center mb-6">
              <h3 class="font-display font-semibold text-2xl text-gray-900 mb-2">Elite Plan</h3>
              <div class="text-4xl font-bold text-green-600 mb-2">$249</div>
              <div class="text-gray-600">per month</div>
            </div>
            <ul class="space-y-3 mb-8">
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Everything in Premium</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Weekly 1-on-1 sessions</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Body composition analysis</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Custom recipe development</span>
              </li>
              <li class="flex items-center">
                <CheckCircle class="w-5 h-5 text-green-500 mr-3" />
                <span class="text-gray-700">Priority support</span>
              </li>
            </ul>
            <button class="w-full bg-green-600 text-white font-semibold py-3 rounded-lg hover:bg-green-700 transition-colors">
              Get Started
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Consultation Form -->
    <section class="py-20 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display font-bold text-3xl sm:text-4xl text-gray-900 mb-4">Free Nutrition Consultation</h2>
          <p class="text-xl text-gray-600">
            Schedule a free 30-minute consultation to discuss your nutrition goals and how we can help.
          </p>
        </div>

        <div class="bg-gray-50 rounded-2xl shadow-lg p-8">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                <input type="text" id="firstName" name="firstName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                <input type="text" id="lastName" name="lastName" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" />
              </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" />
              </div>
            </div>
            <div>
              <label for="runningLevel" class="block text-sm font-medium text-gray-700 mb-2">Running Experience</label>
              <select id="runningLevel" name="runningLevel" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors">
                <option value="">Select your running level</option>
                <option value="beginner">Beginner (0-1 years)</option>
                <option value="recreational">Recreational (1-3 years)</option>
                <option value="competitive">Competitive (3+ years)</option>
                <option value="elite">Elite/Professional</option>
              </select>
            </div>
            <div>
              <label for="goals" class="block text-sm font-medium text-gray-700 mb-2">Nutrition Goals</label>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                <label class="flex items-center">
                  <input type="checkbox" name="goals" value="performance" class="rounded border-gray-300 text-green-600 focus:ring-green-500" />
                  <span class="ml-2 text-gray-700">Improve performance</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="goals" value="weight-loss" class="rounded border-gray-300 text-green-600 focus:ring-green-500" />
                  <span class="ml-2 text-gray-700">Weight management</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="goals" value="recovery" class="rounded border-gray-300 text-green-600 focus:ring-green-500" />
                  <span class="ml-2 text-gray-700">Faster recovery</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="goals" value="energy" class="rounded border-gray-300 text-green-600 focus:ring-green-500" />
                  <span class="ml-2 text-gray-700">More energy</span>
                </label>
              </div>
            </div>
            <div>
              <label for="dietaryRestrictions" class="block text-sm font-medium text-gray-700 mb-2">Dietary Restrictions or Preferences</label>
              <textarea id="dietaryRestrictions" name="dietaryRestrictions" rows="3" placeholder="Please list any allergies, dietary restrictions, or food preferences..." class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors resize-none"></textarea>
            </div>
            <div>
              <label for="preferredTime" class="block text-sm font-medium text-gray-700 mb-2">Preferred Consultation Time</label>
              <select id="preferredTime" name="preferredTime" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors">
                <option value="">Select preferred time</option>
                <option value="morning">Morning (8AM - 12PM)</option>
                <option value="afternoon">Afternoon (12PM - 5PM)</option>
                <option value="evening">Evening (5PM - 8PM)</option>
                <option value="flexible">I'm flexible</option>
              </select>
            </div>
            <div class="text-center">
              <button type="submit" class="inline-flex items-center px-8 py-4 bg-green-600 text-white font-semibold rounded-xl hover:bg-green-700 transition-colors">
                Schedule Free Consultation
                <ArrowRight class="ml-2 w-5 h-5" />
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>