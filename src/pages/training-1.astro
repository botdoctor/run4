---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Clock, Users, Trophy, Target, CheckCircle, ArrowRight } from 'lucide-react';
---

<Layout title="Training Programs - Run4PRs" description="Discover our comprehensive training programs designed for runners of all levels. From beginner to advanced, find the perfect program to achieve your goals.">
  <Header />
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="py-20 bg-gradient-to-br from-primary-50 to-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="font-display font-bold text-4xl sm:text-5xl text-gray-900 mb-6">
          Training <span class="text-primary-600">Programs</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Choose from our comprehensive range of training programs designed for runners of all levels and goals. Each program is carefully crafted to help you achieve your personal records.
        </p>
      </div>
    </section>

    <!-- Programs Grid -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Half Marathon Program -->
          <div class="bg-white border border-gray-200 rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="https://images.pexels.com/photos/2402777/pexels-photo-2402777.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Half Marathon Training" class="w-full h-48 object-cover" />
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="bg-primary-100 text-primary-800 text-xs font-semibold px-3 py-1 rounded-full">12 Weeks</span>
                <span class="text-2xl font-bold text-primary-600">$99</span>
              </div>
              <h3 class="font-display font-semibold text-xl text-gray-900 mb-3">Half Marathon Program</h3>
              <p class="text-gray-600 mb-4">Complete 12-week training program designed to get you race-ready for your half marathon PR.</p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Personalized training schedule
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Nutrition guidance
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Race day strategy
                </li>
              </ul>
              <a href="/half-marathon-program" class="w-full inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
                Learn More
                <ArrowRight class="ml-2 w-4 h-4" />
              </a>
            </div>
          </div>

          <!-- Speed Training -->
          <div class="bg-white border border-gray-200 rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="https://images.pexels.com/photos/1571939/pexels-photo-1571939.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Speed Training" class="w-full h-48 object-cover" />
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="bg-accent-100 text-accent-800 text-xs font-semibold px-3 py-1 rounded-full">8 Weeks</span>
                <span class="text-2xl font-bold text-primary-600">$129</span>
              </div>
              <h3 class="font-display font-semibold text-xl text-gray-900 mb-3">Unleash Speed Program</h3>
              <p class="text-gray-600 mb-4">Specialized speed and interval training to help you break through plateaus and run faster.</p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Advanced interval training
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  VO2 max improvement
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Speed endurance workouts
                </li>
              </ul>
              <a href="/unleash-speed" class="w-full inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
                Learn More
                <ArrowRight class="ml-2 w-4 h-4" />
              </a>
            </div>
          </div>

          <!-- Strength Training -->
          <div class="bg-white border border-gray-200 rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="https://images.pexels.com/photos/1552242/pexels-photo-1552242.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Strength Training" class="w-full h-48 object-cover" />
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="bg-green-100 text-green-800 text-xs font-semibold px-3 py-1 rounded-full">Ongoing</span>
                <span class="text-2xl font-bold text-primary-600">$79</span>
              </div>
              <h3 class="font-display font-semibold text-xl text-gray-900 mb-3">Strength Training</h3>
              <p class="text-gray-600 mb-4">Runner-specific strength training to improve performance and prevent injuries.</p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Injury prevention focus
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Core stability training
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Progressive overload system
                </li>
              </ul>
              <a href="/strength-training" class="w-full inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
                Learn More
                <ArrowRight class="ml-2 w-4 h-4" />
              </a>
            </div>
          </div>

          <!-- Marathon Program -->
          <div class="bg-white border border-gray-200 rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="https://images.pexels.com/photos/2402777/pexels-photo-2402777.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Marathon Training" class="w-full h-48 object-cover" />
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="bg-purple-100 text-purple-800 text-xs font-semibold px-3 py-1 rounded-full">16 Weeks</span>
                <span class="text-2xl font-bold text-primary-600">$149</span>
              </div>
              <h3 class="font-display font-semibold text-xl text-gray-900 mb-3">Marathon Program</h3>
              <p class="text-gray-600 mb-4">Comprehensive 16-week marathon training program for first-timers and PR seekers.</p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Progressive mileage buildup
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Long run strategies
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Tapering protocols
                </li>
              </ul>
              <a href="/marathon-program" class="w-full inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
                Learn More
                <ArrowRight class="ml-2 w-4 h-4" />
              </a>
            </div>
          </div>

          <!-- 5K Program -->
          <div class="bg-white border border-gray-200 rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="https://images.pexels.com/photos/1571939/pexels-photo-1571939.jpeg?auto=compress&cs=tinysrgb&w=400" alt="5K Training" class="w-full h-48 object-cover" />
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-3 py-1 rounded-full">6 Weeks</span>
                <span class="text-2xl font-bold text-primary-600">$69</span>
              </div>
              <h3 class="font-display font-semibold text-xl text-gray-900 mb-3">5K Speed Program</h3>
              <p class="text-gray-600 mb-4">Intensive 6-week program focused on 5K speed and performance optimization.</p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Track workout sessions
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Tempo run training
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Race pacing strategies
                </li>
              </ul>
              <a href="/5k-program" class="w-full inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
                Learn More
                <ArrowRight class="ml-2 w-4 h-4" />
              </a>
            </div>
          </div>

          <!-- Triathlon Program -->
          <div class="bg-white border border-gray-200 rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <img src="https://images.pexels.com/photos/863988/pexels-photo-863988.jpeg?auto=compress&cs=tinysrgb&w=400" alt="Triathlon Training" class="w-full h-48 object-cover" />
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="bg-red-100 text-red-800 text-xs font-semibold px-3 py-1 rounded-full">20 Weeks</span>
                <span class="text-2xl font-bold text-primary-600">$199</span>
              </div>
              <h3 class="font-display font-semibold text-xl text-gray-900 mb-3">Triathlon Plan</h3>
              <p class="text-gray-600 mb-4">Complete triathlon training program covering swim, bike, and run disciplines.</p>
              <ul class="space-y-2 mb-6">
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Multi-sport training
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Transition practice
                </li>
                <li class="flex items-center text-sm text-gray-600">
                  <CheckCircle class="w-4 h-4 text-green-500 mr-2" />
                  Equipment guidance
                </li>
              </ul>
              <a href="/triathlonplan" class="w-full inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
                Learn More
                <ArrowRight class="ml-2 w-4 h-4" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Program Selection Form -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="font-display font-bold text-3xl sm:text-4xl text-gray-900 mb-4">Not Sure Which Program?</h2>
          <p class="text-xl text-gray-600">
            Let us help you find the perfect training program for your goals.
          </p>
        </div>

        <div class="bg-white rounded-2xl shadow-lg p-8">
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                <input type="text" id="name" name="name" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                <input type="email" id="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors" />
              </div>
            </div>
            <div>
              <label for="experience" class="block text-sm font-medium text-gray-700 mb-2">Running Experience</label>
              <select id="experience" name="experience" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors">
                <option value="">Select your experience level</option>
                <option value="beginner">Beginner (0-1 years)</option>
                <option value="intermediate">Intermediate (1-3 years)</option>
                <option value="advanced">Advanced (3+ years)</option>
                <option value="competitive">Competitive athlete</option>
              </select>
            </div>
            <div>
              <label for="goal" class="block text-sm font-medium text-gray-700 mb-2">Primary Goal</label>
              <select id="goal" name="goal" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors">
                <option value="">Select your primary goal</option>
                <option value="5k">5K Personal Record</option>
                <option value="10k">10K Personal Record</option>
                <option value="half-marathon">Half Marathon</option>
                <option value="marathon">Marathon</option>
                <option value="triathlon">Triathlon</option>
                <option value="general-fitness">General Fitness</option>
                <option value="weight-loss">Weight Loss</option>
              </select>
            </div>
            <div>
              <label for="timeline" class="block text-sm font-medium text-gray-700 mb-2">Timeline</label>
              <select id="timeline" name="timeline" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors">
                <option value="">When do you want to achieve your goal?</option>
                <option value="1-3-months">1-3 months</option>
                <option value="3-6-months">3-6 months</option>
                <option value="6-12-months">6-12 months</option>
                <option value="1-year-plus">1+ years</option>
              </select>
            </div>
            <div>
              <label for="additional-info" class="block text-sm font-medium text-gray-700 mb-2">Additional Information</label>
              <textarea id="additional-info" name="additional-info" rows="4" placeholder="Tell us about any injuries, time constraints, or specific questions..." class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-none"></textarea>
            </div>
            <div class="text-center">
              <button type="submit" class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-xl hover:bg-primary-700 transition-colors">
                Get Program Recommendation
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>